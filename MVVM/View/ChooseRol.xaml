<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Confiho.MVVM.View.ChooseRol"
             Title="ChooseRol">
    <Grid RowDefinitions=".25*, .4*, .35*">
        <Image Source="backgraund_choose_rol.svg" Grid.RowSpan="3" Aspect="Fill"/>
        <VerticalStackLayout Grid.Row="0" 
                             VerticalOptions="Center"
                             HorizontalOptions="Start"
                             Margin="20">
            <ImageButton Source="icon_consu.svg"
                         Clicked="ImageButton_Clicked"/>
            <Label Text="Consumidor"
                   FontSize="30"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="2"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Margin="20">
            <ImageButton Source="icon_admin.svg" 
                         Clicked="ImageButton_Clicked_1"/>
            <Label Text="Administrador"
                   FontSize="30" 
                   TextColor="White"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>